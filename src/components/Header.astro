---
import { header, links, navigation, site } from '../data/site';

const nameParts = site.name.split('@');
---

<header class="sticky top-0 z-40 bg-transparent">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <div class="flex items-center gap-3">
      <img
        src="/assets/logo-viajerosde11.svg"
        alt={`Logo ${site.name}`}
        class="h-11 w-11 rounded-full border border-white/60 bg-white/90 p-1 shadow-sm"
      />
      <div>
        <p class="font-display text-base font-semibold">
          {nameParts.length === 2 ? (
            <span>{nameParts[0]}</span><span class="font-body">@</span><span>{nameParts[1]}</span>
          ) : (
            site.name
          )}
        </p>
        <p class="text-[10px] uppercase tracking-[0.25em] text-ocean-dark">
          {site.tagline}
        </p>
      </div>
    </div>
    <nav class="hidden items-center gap-6 rounded-full border border-slate-200/70 bg-white/80 px-5 py-2 text-sm font-medium shadow-sm backdrop-blur md:flex">
      {navigation.map((item) => (
        <a href={item.href} class="text-slate-600 transition hover:text-ocean">
          {item.label}
        </a>
      ))}
    </nav>
    <div class="md:hidden">
      <details class="relative">
        <summary class="list-none rounded-full border border-ocean-dark/60 bg-white/80 px-4 py-2 text-[10px] font-semibold uppercase tracking-[0.2em] text-ocean-dark shadow-sm backdrop-blur">
          {header.menuLabel}
        </summary>
        <div class="absolute right-0 mt-3 w-56 rounded-2xl border border-white/70 bg-white/95 p-3 shadow-xl">
          {navigation.map((item) => (
            <a href={item.href} class="block rounded-lg px-3 py-2 text-sm hover:bg-slate-100">
              {item.label}
            </a>
          ))}
          <a
            href={links.whatsapp.info}
            target="_blank"
            rel="noreferrer"
            class="mt-2 block rounded-full bg-ocean px-4 py-2 text-center text-sm font-semibold text-white shadow-md transition hover:bg-ocean-dark"
          >
            {header.ctaLabel}
          </a>
        </div>
      </details>
    </div>
    <a
      href={links.whatsapp.info}
      target="_blank"
      rel="noreferrer"
      class="hidden rounded-full bg-ocean px-5 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-white shadow-md transition hover:-translate-y-0.5 hover:bg-ocean-dark md:inline-flex"
    >
      {header.ctaLabel}
    </a>
  </div>
</header>

