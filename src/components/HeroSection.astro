---
import { hero } from '../data/site';
---

<section id="inicio" class="relative">
  <div class="mx-auto grid max-w-6xl gap-10 px-6 pb-20 pt-8 lg:grid-cols-[1.1fr_0.9fr]">
    <div class="space-y-6">
      <span class="inline-flex items-center gap-2 rounded-full bg-white/80 px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-[color:var(--color-ocean-dark)] shadow">
        {hero.badge}
      </span>
      <h1 class="text-balance text-4xl font-extrabold leading-tight md:text-5xl lg:text-6xl">
        {hero.title}
      </h1>
      <p class="text-base text-slate-700 md:text-lg">
        {hero.description}
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href={hero.ctas.primary.href}
          target="_blank"
          rel="noreferrer"
          class="rounded-full bg-[color:var(--color-coral)] px-6 py-3 text-sm font-semibold text-white shadow-lg transition hover:-translate-y-0.5 hover:bg-[#e85c3c]"
        >
          {hero.ctas.primary.label}
        </a>
        <a
          href={hero.ctas.secondary.href}
          class="rounded-full border border-[color:var(--color-ocean-dark)] px-6 py-3 text-sm font-semibold text-[color:var(--color-ocean-dark)] transition hover:-translate-y-0.5 hover:bg-white/70"
        >
          {hero.ctas.secondary.label}
        </a>
      </div>
      <div class="flex flex-wrap gap-4 text-sm text-slate-700">
        {hero.highlights.map((item) => (
          <div class="glass-card inline-flex items-center gap-2 rounded-full px-4 py-2">
            <span class="h-2.5 w-2.5 rounded-full" style={`background: ${item.color}`}></span>
            {item.label}
          </div>
        ))}
      </div>
    </div>
    <div class="relative">
      <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-[color:var(--color-sun)] opacity-60 blur-xl"></div>
      <div class="absolute -left-10 bottom-6 h-32 w-32 rounded-full bg-[color:var(--color-mint)] opacity-50 blur-2xl"></div>
      <div class="glass-card relative overflow-hidden rounded-[2.5rem] p-6 shadow-xl">
        <div class="flex items-center justify-between">
          <p class="font-display text-lg font-semibold">{hero.card.title}</p>
          <span class="rounded-full bg-[color:var(--color-ocean)] px-3 py-1 text-xs font-semibold text-white">
            {hero.card.year}
          </span>
        </div>
        <div class="mt-4 grid gap-4">
          <div class="aspect-[4/3] w-full rounded-2xl bg-[linear-gradient(135deg,#0b6ea8,#0b6ea8_35%,#ffb020_35%,#ffb020_70%,#f46d4f_70%)] p-6 text-white">
            <p class="text-sm uppercase tracking-[0.25em] text-white/80">{hero.card.heroLabel}</p>
            <h3 class="mt-3 text-2xl font-bold">{hero.card.heroTitle}</h3>
          </div>
          <div class="grid gap-3 md:grid-cols-2">
            {hero.card.features.map((feature) => (
              <div class="rounded-2xl border border-white/70 bg-white/70 p-4">
                <p class="text-xs font-semibold uppercase text-slate-500">{feature.title}</p>
                <p class="mt-2 text-sm text-slate-700">{feature.text}</p>
              </div>
            ))}
          </div>
          <div class="rounded-2xl bg-[color:var(--color-ocean-dark)] p-4 text-white">
            <p class="text-sm font-semibold">{hero.card.prompt.title}</p>
            <p class="text-xs text-white/80">{hero.card.prompt.text}</p>
            <a
              href={hero.card.prompt.ctaHref}
              target="_blank"
              rel="noreferrer"
              class="mt-3 inline-flex items-center gap-2 rounded-full bg-white px-4 py-2 text-xs font-semibold text-[color:var(--color-ocean-dark)]"
            >
              {hero.card.prompt.ctaLabel}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
