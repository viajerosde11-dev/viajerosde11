---
import { cta } from '../data/site';
---

<section class="relative">
  <div class="mx-auto max-w-6xl px-6 pb-20">
    <div class="glass-card flex flex-col gap-6 rounded-[2.5rem] p-8 text-ink lg:flex-row lg:items-center lg:justify-between">
      <div>
        <h2 class="text-2xl font-bold md:text-3xl">{cta.title}</h2>
        <p class="mt-2 text-sm text-slate-700">{cta.description}</p>
      </div>
      <div class="flex flex-wrap gap-3">
        <a
          href={cta.primary.href}
          target="_blank"
          rel="noreferrer"
          class="rounded-full bg-coral px-6 py-3 text-sm font-semibold text-white shadow-lg transition hover:-translate-y-0.5 hover:bg-[#e85c3c]"
        >
          {cta.primary.label}
        </a>
        <a
          href={cta.secondary.href}
          class="rounded-full border border-ocean-dark px-6 py-3 text-sm font-semibold text-ocean-dark transition hover:-translate-y-0.5 hover:bg-white/70"
        >
          {cta.secondary.label}
        </a>
      </div>
    </div>
  </div>
</section>

