---
import { site } from '../data/site';

const whatsappNumber = site.whatsapp.numberDisplay;
const defaultMessage = site.whatsapp.messages.info;
const notificationMessage = '¡Hola! ¿Necesitas ayuda para tu viaje de grado 11?';
---

<!-- Botón flotante de WhatsApp -->
<div class="fixed bottom-6 right-6 z-50">
  <a
    href={`https://wa.me/${whatsappNumber.replace(/\D/g, '')}?text=${encodeURIComponent(
      defaultMessage
    )}`}
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-button group"
    aria-label="Contactar por WhatsApp"
  >
    <!-- Fondo del botón con gradiente -->
    <div class="animate-float flex h-14 w-14 items-center justify-center rounded-full bg-gradient-to-br from-green-400 to-green-600 shadow-lg transition-all duration-300 hover:scale-110 hover:shadow-xl">
      <!-- Ícono de WhatsApp -->
      <svg
        class="h-8 w-8 text-white"
        fill="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.894 3.690" />
      </svg>

      <!-- Indicador de notificación (pulso) -->
      <div class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500">
        <div class="h-2 w-2 animate-pulse rounded-full bg-white"></div>
      </div>
    </div>

    <!-- Tooltip -->
    <div class="pointer-events-none absolute right-16 top-1/2 -translate-y-1/2 whitespace-nowrap rounded-lg bg-white px-3 py-2 text-gray-800 opacity-0 shadow-lg transition-opacity duration-300 group-hover:opacity-100">
      <span class="text-sm font-medium">¡Chatea con nosotros!</span>
      <!-- Flecha del tooltip -->
      <div class="absolute left-full top-1/2 h-0 w-0 -translate-y-1/2 border-b-4 border-l-4 border-t-4 border-b-transparent border-l-white border-t-transparent"></div>
    </div>

    <!-- Efecto de ondas al hacer hover -->
    <div class="pointer-events-none absolute inset-0 scale-0 rounded-full bg-green-400 opacity-30 transition-transform duration-500 group-hover:scale-150"></div>
  </a>

  <!-- Mensaje emergente ocasional -->
  <div
    id="whatsapp-notification"
    class="absolute bottom-16 right-0 max-w-xs translate-x-full rounded-lg bg-white p-4 opacity-0 shadow-xl transition-all duration-500"
  >
    <div class="flex items-start space-x-3">
      <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-green-500">
        <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.894 3.690" />
        </svg>
      </div>
      <div class="flex-1">
        <h4 class="text-sm font-semibold text-gray-900">{site.name}</h4>
        <p class="mt-1 text-sm text-gray-600">{notificationMessage}</p>
        <span class="mt-1 block text-xs text-gray-400">Hace unos segundos</span>
      </div>
      <button
        id="close-notification"
        class="ml-2 text-gray-400 hover:text-gray-600"
        aria-label="Cerrar notificación"
      >
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
            clip-rule="evenodd"
          />
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .whatsapp-button {
    position: relative;
  }

  .whatsapp-button::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: rgba(34, 197, 94, 0.4);
    border-radius: 50%;
    animation: whatsappPulse 2s infinite;
    pointer-events: none;
  }

  .animate-float {
    animation: whatsappFloat 4s ease-in-out infinite;
  }

  @keyframes whatsappPulse {
    0% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    70% {
      transform: translate(-50%, -50%) scale(1.4);
      opacity: 0;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.4);
      opacity: 0;
    }
  }

  @keyframes whatsappFloat {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-4px);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const notification = document.getElementById('whatsapp-notification');
    const closeButton = document.getElementById('close-notification');

    setTimeout(() => {
      if (notification) {
        notification.style.transform = 'translateX(0)';
        notification.style.opacity = '1';
      }
    }, 5000);

    setTimeout(() => {
      if (notification) {
        notification.style.transform = 'translateX(100%)';
        notification.style.opacity = '0';
      }
    }, 15000);

    closeButton?.addEventListener('click', () => {
      if (notification) {
        notification.style.transform = 'translateX(100%)';
        notification.style.opacity = '0';
      }
    });
  });
</script>
