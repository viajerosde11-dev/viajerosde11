---
import { about } from '../data/site';
---

<section id="quienes-somos" class="relative">
  <div class="mx-auto grid max-w-6xl gap-10 px-6 py-16 lg:grid-cols-[0.9fr_1.1fr]">
    <div class="relative">
      <div class="absolute -left-6 top-4 h-24 w-24 rounded-3xl bg-coral opacity-60 blur-xl"></div>
      <div class="glass-card relative rounded-[2.5rem] p-6 text-ink">
        <div class="flex items-center justify-between">
          <p class="font-display text-lg font-semibold">{about.video.title}</p>
          <span class="rounded-full bg-white px-3 py-1 text-xs font-semibold text-ocean-dark">
            {about.video.badge}
          </span>
        </div>
        <div class="mt-4 flex aspect-video items-center justify-center rounded-2xl bg-ink/90 text-white">
          <span class="inline-flex h-14 w-14 items-center justify-center rounded-full bg-sun text-xl font-bold">
            {about.video.playSymbol}
          </span>
        </div>
        <p class="mt-4 text-sm text-slate-600">
          {about.video.description}
        </p>
      </div>
    </div>
    <div class="space-y-6">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-sky-200">
          {about.kicker}
        </p>
        <h2 class="mt-2 text-3xl font-bold md:text-4xl">
          {about.title}
        </h2>
      </div>
      <p class="text-slate-200">{about.description}</p>
      <div class="grid gap-4 sm:grid-cols-3">
        {about.stats.map((stat) => (
          <div class="rounded-2xl bg-white/80 p-4 text-slate-700 shadow">
            <p class="text-xs font-semibold uppercase" style={`color: ${stat.color}`}>
              {stat.value}
            </p>
            <p class="mt-2 text-sm font-medium">{stat.label}</p>
          </div>
        ))}
      </div>
      <div class="rounded-2xl border border-white/60 bg-white/70 p-5">
        <p class="text-sm font-semibold text-ink">{about.highlight.title}</p>
        <p class="mt-2 text-sm text-slate-700">{about.highlight.description}</p>
      </div>
    </div>
  </div>
</section>

