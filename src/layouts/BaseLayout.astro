---
import '../styles/global.css';
import { meta } from '../data/site';

type Props = {
  title?: string;
  description?: string;
};

const {
  title = meta.defaultTitle,
  description = meta.defaultDescription,
} = Astro.props as Props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ffffff" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Viajer@s de 11" />
    <meta property="og:image" content={meta.ogImage} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/assets/logo-viajerosde11.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,400;12..96,600;12..96,800&family=Sora:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="text-[color:var(--color-ink)]">
    <a class="skip-link" href="#contenido">Saltar al contenido</a>
    <slot />
  </body>
</html>
